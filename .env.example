# CALLME - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000

# Twilio Configuration
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Twilio Webhooks (your server URL)
TWILIO_TWIML_URL=https://your-domain.com/api/twilio/webhook/voice
TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/api/twilio/webhook/status

# Call Recording (optional)
TWILIO_RECORD_CALLS=false
